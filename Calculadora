   <script type="text/javascript">

    function media2(){
     var nota2 = parseFloat(document.getElementById("nota2").value);
 
     var media2 = nota2 ;

     if(media2 >= 0)
      if(media2==0)
        alert("Está de sacanagem? Fez o que com suas flechas abençoado?");
       else if(media2>=1 && media2<=59)
        alert("Com isso você não pega nada no garantido, porém pode pegar "+nota2 +" cópias. #Confia. \nEstá faltando "+(60-nota2) +" flecha(s) para pegar sua primeira cópia garantida.");
       else if(media2>=60 && media2<=119)
        alert("Parabéns! \nCom isso você pega 1 cópia no garantido. \nAgora já pode completar a sua coleção de cavaleiros. \nSó Faltam 17 cópias para platinar.");
       else if(media2>=120 && media2<=179)
        alert("Você consegue pegar 2 cópias no garantido, e precisa de mais "+(180-nota2) +" flechas para pegar outra cópia. \n02 cópias = até 7 estrelas. \nFaltam 16 cópias para platinar.");
       else if(media2>=180 && media2<=239)
        alert("Você consegue pegar 3 cópias no garantido, e precisa de mais "+(240-nota2) +" flechas para pegar outra cópia. \n03 cópias = até 7 estrelas. \nFaltam 15 cópias para platinar.");
       else if(media2>=240 && media2<=299)
        alert("Você consegue pegar 4 cópias no garantido, e precisa de mais "+(300-nota2) +" flechas para pegar outra cópia. \n04 cópias = até 10 estrelas. \nFaltam 14 cópias para platinar.");
       else if(media2>=300 && media2<=359)
        alert("Você consegue pegar 5 cópias no garantido, e precisa de mais "+(360-nota2) +" flechas para pegar outra cópia. \n05 cópias = até 10 estrelas. \nFaltam 13 cópias para platinar.");
       else if(media2>=360 && media2<=419)
        alert("Você consegue pegar 6 cópias no garantido, e precisa de mais "+(420-nota2) +" flechas para pegar outra cópia. \n06 cópias = até 10 estrelas. \nFaltam 12 cópias para platinar.");
       else if(media2>=420 && media2<=479)
        alert("Você consegue pegar 7 cópias no garantido, e precisa de mais "+(480-nota2) +" flechas para pegar outra cópia. \n07 cópias = até 10 estrelas. \nFaltam 11 cópias para platinar.");
       else if(media2>=480 && media2<=539)
        alert("Você consegue pegar 8 cópias no garantido, e precisa de mais "+(540-nota2) +" flechas para pegar outra cópia. \n08 cópias = até 11 estrelas. (1*red) \nFaltam 10 cópias para platinar.");
       else if(media2>=540 && media2<=599)
        alert("Você consegue pegar 9 cópias no garantido, e precisa de mais "+(600-nota2) +" flechas para pegar outra cópia. \n09 cópias = até 11 estrelas. (1*red) \nFaltam 9 cópias para platinar.");
       else if(media2>=600 && media2<=659)
        alert("Você consegue pegar 10 cópias no garantido, e precisa de mais "+(660-nota2) +" flechas para pegar outra cópia. \n10 cópias = até 12 estrelas. (2*red) \nFaltam 8 cópias para platinar.");
       else if(media2>=660 && media2<=719)
        alert("Você consegue pegar 11 cópias no garantido, e precisa de mais "+(720-nota2) +" flechas para pegar outra cópia. \n11 cópias = até 12 estrelas. (2*red) \nFaltam 7 cópias para platinar.");
       else if(media2>=720 && media2<=779)
        alert("Você consegue pegar 12 cópias no garantido, e precisa de mais "+(780-nota2) +" flechas para pegar outra cópia. \n12 cópias = até 13 estrelas. (3*red) \nFaltam 6 cópias para platinar.");
       else if(media2>=780 && media2<=839)
        alert("Você consegue pegar 13 cópias no garantido, e precisa de mais "+(840-nota2) +" flechas para pegar outra cópia. \n13 cópias = até 13 estrelas. (3*red) \nFaltam 5 cópias para platinar.");
       else if(media2>=840 && media2<=899)
        alert("Você consegue pegar 14 cópias no garantido, e precisa de mais "+(900-nota2) +" flechas para pegar outra cópia. \n14 cópias = até 14 estrelas. (4*red) \nFaltam 4 cópias para platinar.");
       else if(media2>=900 && media2<=959)
        alert("Você consegue pegar 15 cópias no garantido, e precisa de mais "+(960-nota2) +" flechas para pegar outra cópia. \n15 cópias = até 14 estrelas. (4*red) \nFaltam 3 cópias para platinar.");
       else if(media2>=960 && media2<=1019)
        alert("Você consegue pegar 16 cópias no garantido, e precisa de mais "+(1020-nota2) +" flechas para pegar outra cópia. \n16 cópias = até 15 estrelas. (5*red) \nFaltam 2 cópias para platinar.");
       else if(media2>=1020 && media2<=1079)
        alert("Você consegue pegar 17 cópias no garantido, e precisa de mais "+(1080-nota2) +" flechas para pegar outra cópia. \n17 cópias = até 15 estrelas. (5*red) \nFaltam 1 cópias para platinar.");
       else if(media2==1080)
        alert("Você consegue pegar 18 cópias no garantido. \nParabéns! Se tiver food já pode platinar seu cavaleiro.");
       else if(media2>=1081)
        alert("Dá para platinar e ainda vai sobrar "+(nota2-1080) +" flechas.");
      else
       alert("Fora dos parâmetros.")
     else
      alert("Informe uma quantidade real.")

    }
